@import "_partial/reset";

body, html {
  padding:0;
  margin:0;
  /* font:300 18px/1.5 Roboto, "Helvetica Neue", Arial, sans-serif; */
  background:#FDF3E7;
  color:#818181;
  font:300 18px/1.5 'Trebuchet MS', Arial, 'Lucida Grande', Verdana, Lucida, Helvetica, sans-serif;
}

strong {
  font-weight:500;
  color:#727272;
}

em {
  font-style:italic;
}

a {
  text-decoration:none;
  color:#C63D0F;
  transition:all 0.2s ease;
}

a:hover, a:focus {
  color:#222;
}

h1, h2, h3, h4, h5, h6 {
  font-weight:500;
  letter-spacing:-1px;
  line-height:1.1;
}

p, ul, ol, h1, h2, h3, h4, h5, h6 {
  margin: 0 0 20px;
}

h1 {
  font-size:36px;
  color:#222;
}

h1 a {
  color:#222;
}

h1 a:hover, h1 a:focus {
  color:#C63D0F;
}

h2 {
  font-size:24px;
  color:#222;
}

p.date {
  text-transform:uppercase;
  font-size:13px;
  line-height:1;
}

body {
  border-top:5px solid #C63D0F;
  padding:50px 0;
}

.content {
  max-width:600px;
  margin:0 auto;
  padding:0 20px;
}

header, footer, section, article {
  display:block;
  width:100%;
}

header {
  font-size:100%;
  text-align:right;
  height: 40px;
}

header h2 {
  font-size:120%;
  letter-spacing: 0;
  float:left;
  margin:0;
  /*line-height:1;*/
}

header h2 a {
  color:#222;
}

header h2 a span {
  color:#C63D0F;
}

header .subtitle {
  color: gray;
  font-weight:normal;
  font-size:50%;
  margin-top: 5px;
}

header p {
  margin:0;
  /* line-height:1; */
}

header nav a {
  font-size: 14px;
  /* margin-left: 5px; */
}

blockquote {
  margin:50px 0 50px -24px;
  padding:0 0 0 24px;
  font-size:34px;
  font-weight:300;
  line-height:1.3;
  color:#C63D0F;
  border-left:3px solid #C63D0F;
}

.pullquote {
  width:290px;
}

.pullquote-right {
  float:right;
  margin:0 -120px 20px 20px;
}

.pullquote-left {
  float:left;
  margin:0 20px 20px -120px;
}

footer {
  font-weight:300;
  color:#a5a5a5;
  font-size:13px;
  margin:50px auto 0;
  padding-top:0;
}

article {
  margin:50px 0;
}

.excerpt {
  font-size:28px;
  line-height:1.3;
  font-weight:300;
}

.button {
  display:inline-block;
  font-weight:500;
  color:#a5a5a5;
  padding:0 20px;
  border-radius:18px;
  height:36px;
  line-height:36px;
  border:1px solid #e2e2e2;
  font-size:13px;
}

.button:hover {
  color:#C63D0F;
}

.button-disabled {
  opacity:0.4;
}

.button-disabled:hover {
  color:inherit;
}

.pagination {
  line-height:36px;
  text-align:center;
  overflow:hidden;
}

.pagination p.date {
  line-height:36px;
}

.pagination .page-number{
  padding: 0 5px;
}

.pagination .prev {
  float:left;
}

.pagination .next {
  float:right;
}

.pagination .prev:before {
  content:'←';
  position:relative;
  top:-1px;
  margin-right:8px;
}

.pagination .next:after {
  content:'→';
  position:relative;
  top:-1px;
  margin-left:8px;
}

@media print, screen and (max-width: 860px) {
  .pullquote-right {
    float:right;
    margin:0 -60px 20px 20px;
  }

  .pullquote-left {
    float:left;
    margin:0 20px -60px 20px;
  }
}

@media print, screen and (max-width: 640px) {
  .pullquote {
    display:none;
  }
}

@media print, screen and (max-width: 420px) {
  body {
    font-size:16px;
    padding:20px 0;
  }

  .excerpt {
    font-size:22px;
    font-weight:300;
  }

  blockquote {
    font-size:24px;
    margin:20px 0;
    border:none;
    padding:0;
    font-weight:300;
  }

  article {
    margin:24px 0;
  }

  article + article {
    padding-top:30px;
  }

  footer {
    font-size:11px;
  }

  .pagination .button {
    box-sizing:border-box;
    text-align:center;
    float:none;
    margin-bottom:20px;
    display:block;
  }

  .pagination .button-disabled {
    display:none;
  }
}

pre.src {
  display: block;
  background-color: #333;
  color: white;

  font-family: Consolas, Monaco, 'Andale Mono', monospace;
  direction: ltr;
  text-align: left;
  white-space: pre;
  word-spacing: normal;
  font-size:0.9em;

  -moz-tab-size: 4;
  -o-tab-size: 4;
  tab-size: 4;

  -webkit-hyphens: none;
  -moz-hyphens: none;
  -ms-hyphens: none;
  hyphens: none;

  padding: 8px;
  overflow: auto;

  border-radius: 5px;

  /*word-break: break-all;
  word-wrap: break-word;*/
} 

