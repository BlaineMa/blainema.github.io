div.toc {
  font-size: 1em;
  float: right;
  border: 1px solid #bbb;
  border-radius: 5px;
  margin: 0 0 0 2em;
  padding: 0.5em 0.5em 0 0.5em;
  max-width: 40%;  
  background-color: #efefef;
  overflow: auto; 
}
div.toc .toc-item {
  line-height: 1.3;
}
div.toc .toc-level-3 {
  margin-left: 0.5em;
}
div.toc .toc-level-4 {
  margin-left: 1em;
}
div.toc .toc-level-5 {
  margin-left: 1.5em;
}
div.toc .toc-level-6 {
  margin-left: 2em;
}
